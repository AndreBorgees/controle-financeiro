@model UsuarioModel


<div class="text-danger">
    @{
        Layout = "../Shared/_LayoutLogin.cshtml";


    }
</div>

<div class="container" style="background-color:rgba(239, 239, 239, 0.95 ); border-radius: 10px; padding:20px; width:300px">
    @{
        try
        {
            if (@TempData["MensagemLoginInvalido"].ToString() != null)
            {
                <div class="text-danger">
                    <strong>Atenção!</strong> @TempData["MensagemLoginInvalido"]
                </div>
            }
        }
        catch { }
    }
                <form asp-controller="Usuario" asp-action="validarLogin">
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" class="form-control" asp-for="Email" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="pwd">Senha:</label>
                        <input type="password" class="form-control" asp-for="Senha" required>
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" type="checkbox"> Lembrar-me
                        </label>
                    </div>
                    <button type="button" class="btn btn-primary" onclick="javascript: window.location.href='../../Usuario/Registrar'">Registrar</button>
                    <button type="submit" class="btn btn-default">Entrar</button>
                </form>
</div>