
@{
    ViewData["Title"] = "ExcluirTransacao";
}

@{
    <p><strong>ID: </strong>@ViewBag.ListaTransacao.Id.ToString()</p>
    <p><strong>Data:</strong>@ViewBag.ListaTransacao.Data.ToString()</p>
    <p><strong>Historico: </strong>@ViewBag.ListaTransacao.Descricao.ToString()</p>
    <p><strong>Valor: </strong>@ViewBag.ListaTransacao.Valor.ToString()</p>
}

<h3>Deseja excluir a transacao selecionada ?</h3>

<button type="button" onclick="Cancelar()" class="btn btn-block btn-default">Cancelar</button>
<button type="button" onclick="Excluir(@ViewBag.ListaTransacao.Id.ToString())" class="btn btn-block btn-danger">Excluir</button>

<script>
    function Excluir(id) {

        window.location.href = "../../Transacao/Excluir/" + id;

    }

    function Cancelar() {
        window.location.href = "../../Transacao/Index"

    }
</script>