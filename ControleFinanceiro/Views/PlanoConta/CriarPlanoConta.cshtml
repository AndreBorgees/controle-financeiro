@model PlanoContaModel

@{
    ViewData["Title"] = "CriarPlanoConta";
}

<h3>Criar Plano Conta</h3>


@{

    var vDescricao = "";
    var vTipo = "";
    var vId = 0;

    try
    {
        vId = int.Parse(@ViewBag.RegistroPlanoConta.Id.ToString());
        vDescricao = @ViewBag.RegistroPlanoConta.Descricao.ToString();
        vTipo = @ViewBag.RegistroPlanoConta.Tipo.ToString();

    }
    catch { }
}

<form asp-controller="PlanoConta" asp-action="CriarPlanoConta">

    <input type="hidden" asp-for="Id" value="@vId" />

    <div class="form-group">
        <label for="Descrição">Descricao:</label>
        <input type="text" class="form-control" asp-for="Descricao" value="@vDescricao" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Tipo:</label>

        @{
            if (@vTipo == "R")
            {
                <div class="radio"> <label><input type="radio" asp-for="Tipo" value="R" checked>Receita</label></div>
                <div class="radio"> <label><input type="radio" asp-for="Tipo" value="D" unchecked>Despesa</label></div>
            }
            else
            {
                <div class="radio"> <label><input type="radio" asp-for="Tipo" value="R" unhecked>Receita</label></div>
                <div class="radio"> <label><input type="radio" asp-for="Tipo" value="D" checked>Despesa</label></div>

            }
        }
    </div>

    <button type="submit" class="btn btn-success btn-block">Registrar</button>

</form>

